# ============================================
# SATH Platform - Environment Variables
# ============================================
# Copia este archivo a .env y configura los valores

# ============================================
# PostgreSQL
# ============================================
POSTGRES_USER=sath
POSTGRES_PASSWORD=your_secure_password_here

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=your_redis_password_here

# ============================================
# InfluxDB
# ============================================
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=your_influxdb_password_here
INFLUXDB_TOKEN=your_influxdb_token_here

# ============================================
# JWT & Security
# ============================================
# Genera con: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Genera con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# Stripe (Billing)
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Grafana
# ============================================
GRAFANA_PASSWORD=your_grafana_password_here

# ============================================
# API URL (para el dashboard)
# ============================================
API_URL=http://localhost:8000
